<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WBApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.WBApp" parent="Base.Theme.WBApp" />

    <!--Toolbar style-->
    <style name="Widget.AppCompat.Toolbar.MyToolbar">
        <item name="titleTextColor">@color/white</item>
    </style>

    <!--Custom Edit Text Style-->
    <style name="Base.Widget.AppCompat.EditText.CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/cool_grey</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:paddingEnd">@dimen/custom_edit_text_text_size</item>
    </style>
    <!--Custom Text Style-->
    <style name="Base.Widget.AppCompat.TextView.White16" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--TextView Styles-->
    <style name="Base.Widget.AppCompat.TextView.Grey12" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/cool_grey</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.Grey14" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/cool_grey</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.TangerineTwo" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/tangerine_two</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.White18" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.White22" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Button Styles-->
    <style name="Widget.AppCompat.Button.MyRoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!--RadioButton Styles-->
    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/tangerine_two</item>
    </style>

    <!--CheckBox Styles-->
    <style name="MyCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/tangerine_two</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

</resources>