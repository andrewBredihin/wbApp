<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/basket_toolbar"
        style="@style/Widget.AppCompat.Toolbar.MyToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/back_chevron">

        <TextView
            android:id="@+id/basket_toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/basket_toolbar"
            android:textColor="@android:color/white" />
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cool_grey" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/basket_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="2"
                    tools:listitem="@layout/menu_recycler_holder" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/order_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_23">

                    <com.bav.ui.EditAmountView
                        android:id="@+id/number_of_guests"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_33"
                        app:layout_constraintEnd_toEndOf="@id/guideline_end"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/number_of_guests_text"
                        style="@style/Base.Widget.AppCompat.TextView.White14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/number_of_guests"
                        app:layout_constraintBottom_toBottomOf="@id/number_of_guests"
                        app:layout_constraintEnd_toStartOf="@id/number_of_guests"
                        app:layout_constraintStart_toStartOf="@id/guideline_start"
                        app:layout_constraintTop_toTopOf="@id/number_of_guests"
                        app:text="@string/number_of_guests" />

                    <TextView
                        android:id="@+id/basket_description_text"
                        style="@style/Base.Widget.AppCompat.TextView.Grey11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:text="@string/basket_description"
                        app:layout_constraintEnd_toEndOf="@id/guideline_end"
                        app:layout_constraintStart_toStartOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@id/number_of_guests" />

                    <View
                        android:id="@+id/basket_description_separator"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_23"
                        android:background="@color/cool_grey"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/basket_description_text" />

                    <TextView
                        android:id="@+id/enter_promo_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="@string/enter_promo_code"
                        app:layout_constraintEnd_toEndOf="@id/guideline_end"
                        app:layout_constraintStart_toStartOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@id/basket_description_separator" />

                    <EditText
                        android:id="@+id/enter_promo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@drawable/stroke_background"
                        android:hint="@string/promo_code"
                        android:textColor="@color/white"
                        android:textColorHint="@color/cool_grey"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toStartOf="@+id/enter_promo_button"
                        app:layout_constraintStart_toStartOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@id/enter_promo_text" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/enter_promo_button"
                        style="@style/Widget.AppCompat.Button.MyRoundedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_20"
                        android:text="@string/apply"
                        app:layout_constraintBottom_toBottomOf="@+id/enter_promo"
                        app:layout_constraintEnd_toEndOf="@id/guideline_end"
                        app:layout_constraintTop_toTopOf="@+id/enter_promo" />

                    <View
                        android:id="@+id/discount_background"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/dark_grey"
                        app:layout_constraintBottom_toBottomOf="@+id/discount_guideline_bottom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/discount_guideline_top"
                        app:layout_goneMarginBottom="@dimen/dp_23" />

                    <TextView
                        android:id="@+id/discount_text"
                        style="@style/Base.Widget.AppCompat.TextView.White14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_40"
                        android:text="@string/discount"
                        app:layout_constraintEnd_toStartOf="@id/discount"
                        app:layout_constraintStart_toStartOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@+id/enter_promo" />

                    <TextView
                        android:id="@+id/discount"
                        style="@style/Base.Widget.AppCompat.TextView.White14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/guideline_end"
                        app:layout_constraintTop_toTopOf="@+id/discount_text"
                        tools:text="10%" />

                    <View
                        android:id="@+id/discount_separator"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/cool_grey"
                        app:layout_constraintEnd_toEndOf="@id/guideline_end"
                        app:layout_constraintStart_toStartOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@id/discount_text" />

                    <TextView
                        android:id="@+id/total_with_discount_text"
                        style="@style/Base.Widget.AppCompat.TextView.White14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="@string/total_with_discount"
                        app:layout_constraintEnd_toStartOf="@id/total_with_discount"
                        app:layout_constraintStart_toStartOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@id/discount_separator" />

                    <TextView
                        android:id="@+id/total_with_discount"
                        style="@style/Base.Widget.AppCompat.TextView.TangerineTwo16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        app:layout_constraintEnd_toEndOf="@id/guideline_end"
                        app:layout_constraintTop_toBottomOf="@id/discount_separator"
                        tools:text="P 1039" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="@dimen/dp_15" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="@dimen/dp_15" />

                    <View
                        android:id="@+id/discount_guideline_bottom"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/dp_23"
                        app:layout_constraintEnd_toEndOf="@id/guideline_end"
                        app:layout_constraintStart_toStartOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@id/total_with_discount" />

                    <View
                        android:id="@+id/discount_guideline_top"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/dp_23"
                        app:layout_constraintBottom_toTopOf="@id/discount"
                        app:layout_constraintEnd_toEndOf="@id/guideline_end"
                        app:layout_constraintStart_toStartOf="@id/guideline_start" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/order_button"
                        style="@style/Widget.AppCompat.Button.MyRoundedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_60"
                        android:layout_marginTop="@dimen/dp_33"
                        android:text="@string/order"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/discount_guideline_bottom" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/auth_in_basket_button"
                        style="@style/Widget.AppCompat.Button.ButtonStrokeBorder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_60"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_40"
                        android:text="@string/authorization_in_basket"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/order_button" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_gravity="center"/>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>