<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/black">

    <ImageView
        android:id="@+id/menu_recycler_holder_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_recycler_holder_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_144"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Цезарь с креветками" />

    <TextView
        android:id="@+id/menu_recycler_holder_description"
        style="@style/Base.Widget.AppCompat.TextView.Grey12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_15"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_recycler_holder_button_border"
        app:layout_constraintStart_toStartOf="@id/menu_recycler_holder_title"
        app:layout_constraintTop_toBottomOf="@+id/menu_recycler_holder_title"
        tools:text="Классическое сочетание салатов Айсберг и креветками с курицей…" />

    <ImageView
        android:id="@+id/menu_recycler_holder_button_border"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_33"
        android:layout_marginEnd="@dimen/dp_15"
        android:src="@drawable/button_price_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_recycler_holder_title" />

    <TextView
        android:id="@+id/menu_recycler_holder_button_price"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_33"
        app:layout_constraintStart_toStartOf="@+id/menu_recycler_holder_button_border"
        app:layout_constraintTop_toTopOf="@+id/menu_recycler_holder_button_border"
        style="@style/Base.Widget.AppCompat.TextView.White16"
        android:gravity="center"
        tools:text="P 200"
        tools:visibility="invisible"/>

    <FrameLayout
        android:id="@+id/menu_recycler_holder_edit_amount_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/menu_recycler_holder_button_border"
        app:layout_constraintTop_toTopOf="@+id/menu_recycler_holder_button_border"
        android:visibility="invisible"
        tools:visibility="visible">

        <include
            android:id="@+id/menu_recycler_holder_edit_amount"
            layout="@layout/edit_amount_view" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>