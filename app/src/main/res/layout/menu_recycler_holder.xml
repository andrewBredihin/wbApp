<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/black">

    <ImageView
        android:id="@+id/menu_recycler_holder_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_recycler_holder_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_144"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Цезарь с креветками" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bottom_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="menu_recycler_holder_description,amount_view"
        tools:ignore="NotSibling" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/cool_grey"
        android:paddingTop="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottom_barrier" />

    <com.bav.ui.EditAmountView
        android:id="@+id/amount_view"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_33"
        android:layout_marginEnd="@dimen/dp_15"
        app:minAmount="0"
        app:maxAmount="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_recycler_holder_title" />

    <!--<ImageView
        android:id="@+id/menu_recycler_holder_button_border"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_33"
        android:layout_marginEnd="@dimen/dp_15"
        android:src="@drawable/button_price_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_recycler_holder_title"
        android:visibility="invisible"/>-->

    <TextView
        android:id="@+id/menu_recycler_holder_description"
        style="@style/Base.Widget.AppCompat.TextView.Grey12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="@id/bottom_barrier"
        app:layout_constraintEnd_toStartOf="@+id/amount_view"
        app:layout_constraintStart_toStartOf="@id/menu_recycler_holder_title"
        app:layout_constraintTop_toBottomOf="@+id/menu_recycler_holder_title"
        tools:text="Классическое сочетание салатов Айсберг и креветками с курицей…" />

